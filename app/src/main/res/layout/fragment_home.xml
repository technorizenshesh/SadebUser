<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    >

                    <RelativeLayout
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:tint="@color/blue"
                            android:src="@drawable/nav"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp">

                        </ImageView>

                    </RelativeLayout>

                    <ImageView
                        android:src="@drawable/logo"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_30sdp">

                    </ImageView>

                    <RelativeLayout
                        android:id="@+id/RRPost"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:src="@drawable/girl1"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp">

                        </ImageView>

                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp">
                    >

                    <RelativeLayout
                        android:id="@+id/relative_searchBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/search_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginRight="@dimen/_10sdp"
                            android:id="@+id/search_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/imgLeftMenu"
                            android:inputType="text"
                            android:textSize="@dimen/_16sdp"
                            android:text="Search Shop"
                            android:textColor="@color/black" />


                        <ImageView
                            android:layout_alignParentRight="true"
                            android:id="@+id/imgLeftMenu"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/outline" />

                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:text="Top  Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:text="@string/see_all"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_centerVertical="true"
                    android:id="@+id/recyclerCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:background="@color/white"
                    android:scrollbars="vertical"
                    android:visibility="visible" />


                <RelativeLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:text="Near Me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:textColor="@color/blue"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:text="@string/see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_centerVertical="true"
                    android:id="@+id/recyclernearme"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:visibility="visible" />




            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>
